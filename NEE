-- LocalScript в StarterGui
local Players = game:GetService("Players")
local StarterGui = game:GetService("StarterGui")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local DURATION = 300 -- 5 минут

-- Отключаем все стандартные элементы интерфейса
pcall(function()
    StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.All, false)
end)

-- Создаем ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.IgnoreGuiInset = true
screenGui.ResetOnSpawn = false
screenGui.DisplayOrder = 9999
screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
screenGui.Parent = playerGui

-- Чёрный фон
local black = Instance.new("Frame")
black.Size = UDim2.new(1, 0, 1, 0)
black.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
black.BorderSizePixel = 0
black.ZIndex = 1000
black.Active = true
black.Parent = screenGui

-- Текст
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, 0, 0, 100)
label.Position = UDim2.new(0, 0, 0.3, 0)
label.BackgroundTransparency = 1
label.Text = "Script activated, please wait."
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.Font = Enum.Font.GothamBold
label.TextScaled = true
label.ZIndex = 1001
label.Parent = black

-- Полоска фон
local barBg = Instance.new("Frame")
barBg.Size = UDim2.new(0.6, 0, 0, 25)
barBg.Position = UDim2.new(0.2, 0, 0.55, 0)
barBg.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
barBg.BorderSizePixel = 0
barBg.ZIndex = 1001
barBg.Parent = black

-- Полоска заполнения
local barFill = Instance.new("Frame")
barFill.Size = UDim2.new(0, 0, 1, 0)
barFill.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
barFill.BorderSizePixel = 0
barFill.ZIndex = 1002
barFill.Parent = barBg

-- Анимация полоски
local startTime = tick()
local conn
conn = RunService.RenderStepped:Connect(function()
	local elapsed = tick() - startTime
	local progress = math.clamp(elapsed / DURATION, 0, 1)
	barFill.Size = UDim2.new(progress, 0, 1, 0)

	if elapsed >= DURATION then
		conn:Disconnect()
		screenGui:Destroy()

		-- Возвращаем стандартные элементы Roblox
		pcall(function()
			StarterGui:SetCoreGuiEnabled(Enum.CoreGuiType.All, true)
		end)
	end
end)
