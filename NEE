-- Get the HttpService service
local httpService = game:GetService("HttpService")

-- Replace with your actual Discord webhook URL
local webhookUrl = "https://discord.com/api/webhooks/1417846130619977738/mgmCuOeNpaNOBQddZUtCPaeheSjaBWdLNLfPPg2xk6-533OjiGgbjxwmkKPsQO7TK9ep" 

-- Function to send a message to Discord
local function sendMessageToDiscord(messageText)
    -- Create the data table for Discord
    local contentData = {
        ["content"] = messageText 
    }

    -- Encode the data table into a JSON string
    local jsonData = httpService:JSONEncode(contentData)

    -- Send the data to the webhook URL using a POST request
    local success, result = pcall(function()
        httpService:PostAsync(webhookUrl, jsonData)
    end)

    -- Check if the request was successful (optional)
    if success then
        print("Message sent successfully!")
    else
        warn("Failed to send message: " .. result)
    end
end

-- Example: Send a message when a player joins the game
game.Players.PlayerAdded:Connect(function(plr)
    sendMessageToDiscord(plr.Name .. " has joined the game!")
end)
