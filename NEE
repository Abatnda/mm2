button.MouseButton1Click:Connect(function()
	print("Телепорт на базу!")

	-- Создаём черное меню снизу
	local teleportFrame = Instance.new("Frame")
	teleportFrame.Size = UDim2.new(0, 200, 0, 50)
	teleportFrame.Position = UDim2.new(0.5, -100, 1, 10) -- немного ниже экрана
	teleportFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
	teleportFrame.BorderSizePixel = 0
	teleportFrame.Parent = screenGui

	local teleportCorner = Instance.new("UICorner")
	teleportCorner.CornerRadius = UDim.new(0, 12)
	teleportCorner.Parent = teleportFrame

	-- Текст "Teleporting..."
	local teleportText = Instance.new("TextLabel")
	teleportText.Size = UDim2.new(1, 0, 1, 0)
	teleportText.Position = UDim2.new(0, 0, 0, 0)
	teleportText.BackgroundTransparency = 1
	teleportText.Text = "Teleporting..."
	teleportText.TextColor3 = Color3.fromRGB(255, 255, 255)
	teleportText.Font = Enum.Font.SourceSansBold
	teleportText.TextScaled = true
	teleportText.Parent = teleportFrame

	-- Анимация вылета снизу
	local tweenService = game:GetService("TweenService")
	local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
	local tween = tweenService:Create(teleportFrame, tweenInfo, {Position = UDim2.new(0.5, -100, 1, -60)})
	tween:Play()

	-- Через 6 секунд убираем меню
	task.delay(6, function()
		local tweenOut = tweenService:Create(teleportFrame, TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.In), {Position = UDim2.new(0.5, -100, 1, 10)})
		tweenOut:Play()
		tweenOut.Completed:Connect(function()
			teleportFrame:Destroy()
		end)
	end)
end)
