-- Получаем игрока и его GUI
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Создаём ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui
screenGui.ResetOnSpawn = false

-- Меню (квадрат)
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 200) -- квадрат 200x200
frame.Position = UDim2.new(0.5, -100, 0.5, -100) -- по центру
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- Закругление углов
local uicorner = Instance.new("UICorner")
uicorner.CornerRadius = UDim.new(0, 15)
uicorner.Parent = frame

-- Текст "Plague Client"
local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(1, -20, 0, 30) -- шире под полоску
textLabel.Position = UDim2.new(0, 10, 0, 20)
textLabel.BackgroundTransparency = 1
textLabel.Text = "Plague Client"
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
textLabel.Font = Enum.Font.SourceSansBold
textLabel.TextScaled = true
textLabel.Parent = frame

-- Полоска под текстом, подгоняем под размер текста
local bar = Instance.new("Frame")
bar.Size = UDim2.new(0, textLabel.TextBounds.X, 0, 4) -- ширина = текст
bar.Position = UDim2.new(0.5, -textLabel.TextBounds.X/2, 0, 60)
bar.BackgroundColor3 = Color3.fromRGB(0, 255, 0) -- зелёная
bar.BorderSizePixel = 0
bar.Parent = frame

-- Острые края полоски (не закругляем)
-- ничего не делаем с UICorner, будет остро

-- Кнопка внизу "Tp base"
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 100, 0, 30)
button.Position = UDim2.new(0.5, -50, 1, -50) -- снизу
button.BackgroundColor3 = Color3.fromRGB(0, 102, 255) -- синий
button.Text = "Tp base"
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.SourceSansBold
button.TextScaled = true
button.Parent = frame

-- Закругление углов кнопки
local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0, 10)
buttonCorner.Parent = button

-- Скрипт для перетаскивания
local UserInputService = game:GetService("UserInputService")
local dragging = false
local dragStart
local startPos

frame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		dragStart = input.Position
		startPos = frame.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

frame.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		dragInput = input
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
		local delta = input.Position - dragStart
		frame.Position = UDim2.new(
			startPos.X.Scale, startPos.X.Offset + delta.X,
			startPos.Y.Scale, startPos.Y.Offset + delta.Y
		)
	end
end)

-- Пример действия кнопки
button.MouseButton1Click:Connect(function()
	print("Телепорт на базу!")
	-- Тут можно вставить реальный код телепортации
end)
-- Получаем игрока и его GUI
local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Создаём ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = playerGui
screenGui.ResetOnSpawn = false

-- Создаём черный закругленный квадрат (Frame)
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 150) -- ширина 300, высота 150
frame.Position = UDim2.new(0.5, -150, 0.5, -75) -- по центру экрана
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- Закругление углов через UICorner
local uicorner = Instance.new("UICorner")
uicorner.CornerRadius = UDim.new(0, 20) -- радиус углов
uicorner.Parent = frame

-- Создаём текст "Plague Client"
local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(1, -20, 0, 50)
textLabel.Position = UDim2.new(0, 10, 0, 20)
textLabel.BackgroundTransparency = 1
textLabel.Text = "Plague Client"
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
textLabel.Font = Enum.Font.SourceSansBold
textLabel.TextScaled = true
textLabel.Parent = frame

-- Создаём полоску под текстом
local bar = Instance.new("Frame")
bar.Size = UDim2.new(0, 200, 0, 5)
bar.Position = UDim2.new(0.5, -100, 0, 80)
bar.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
bar.BorderSizePixel = 0
bar.Parent = frame

-- Закругляем полоску
local barCorner = Instance.new("UICorner")
barCorner.CornerRadius = UDim.new(0, 2)
barCorner.Parent = bar

-- Скрипт для перетаскивания
local UserInputService = game:GetService("UserInputService")
local dragging = false
local dragStart
local startPos

frame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		dragStart = input.Position
		startPos = frame.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)

frame.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		dragInput = input
	end
end)

UserInputService.InputChanged:Connect(function(input)
	if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
		local delta = input.Position - dragStart
		frame.Position = UDim2.new(
			startPos.X.Scale, startPos.X.Offset + delta.X,
			startPos.Y.Scale, startPos.Y.Offset + delta.Y
		)
	end
end)
