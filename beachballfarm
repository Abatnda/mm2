if game.PlaceId == 142823291 then
    local Players = game:GetService('Players')
    local CoreGUI = game:GetService('CoreGui')
    local TweenService = game:GetService('TweenService')
    local UserInputService = game:GetService("UserInputService")
    local LocalPlayer = Players.LocalPlayer

    getgenv().coinFarm = false
    local maxDistance = 350
    local tweenTime = 0.6 -- безопасное значение
    local segmentLength = 60 -- шаг твина

    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "MM2Farm"
    ScreenGui.ResetOnSpawn = false
    ScreenGui.IgnoreGuiInset = true
    ScreenGui.Parent = CoreGUI

    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(0, 150, 0, 50)
    Frame.Position = UDim2.new(0, 100, 0, 100)
    Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    Frame.BorderSizePixel = 0
    Frame.Parent = ScreenGui

    Instance.new("UICorner", Frame).CornerRadius = UDim.new(0, 10)

    local Button = Instance.new("TextButton")
    Button.Size = UDim2.new(1, -10, 1, -10)
    Button.Position = UDim2.new(0, 5, 0, 5)
    Button.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    Button.TextColor3 = Color3.new(1, 1, 1)
    Button.Font = Enum.Font.GothamBold
    Button.TextSize = 14
    Button.Text = "AutoFarm: OFF"
    Button.Parent = Frame

    Instance.new("UICorner", Button).CornerRadius = UDim.new(0, 8)

    -- GUI Drag
    local dragging, dragInput, dragStart, startPos

    Frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = Frame.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then dragging = false end
            end)
        end
    end)

    Frame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
            dragInput = input
        end
    end)

    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            Frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)

    local function isValidPart(part)
        local pos = part.Position
        return pos and pos.Y >= 0 and pos.X == pos.X and pos.Y == pos.Y and pos.Z == pos.Z
    end

    local function getNearestCoin()
        local char = LocalPlayer.Character
        if not char or not char:FindFirstChild("HumanoidRootPart") then return nil end
        local hrp = char.HumanoidRootPart

        local nearestCoin = nil
        local nearestDistance = math.huge

        for _, obj in pairs(workspace:GetDescendants()) do
            if obj:IsA("Part") and obj.Name == "Coin_Server" and isValidPart(obj) then
                local dist = (hrp.Position - obj.Position).Magnitude
                if dist < nearestDistance and dist <= maxDistance then
                    nearestDistance = dist
                    nearestCoin = obj
                end
            end
        end

        return nearestCoin
    end

    local function tweenToPartSmooth(targetPart)
        local char = LocalPlayer.Character
        if not char or not char:FindFirstChild("HumanoidRootPart") then return end

        local hrp = char.HumanoidRootPart
        local startPos = hrp.Position
        local endPos = targetPart.Position
        local totalDistance = (endPos - startPos).Magnitude

        local steps = math.max(1, math.ceil(totalDistance / segmentLength))
        local timePerStep = tweenTime * (segmentLength / totalDistance)

        for i = 1, steps do
            if not getgenv().coinFarm then return end

            local nextPosition = startPos + (endPos - startPos) * (i / steps)
            local info = TweenInfo.new(math.clamp(timePerStep, 0.05, tweenTime), Enum.EasingStyle.Linear)
            local tween = TweenService:Create(hrp, info, {CFrame = CFrame.new(nextPosition)})
            tween:Play()
            tween.Completed:Wait()
            task.wait(0.01)
        end
    end

    local function coinFarm()
        while getgenv().coinFarm do
            local coin = getNearestCoin()
            if coin then
                tweenToPartSmooth(coin)
            else
                task.wait(0.2)
            end
        end
    end

    local toggled = false
    Button.MouseButton1Click:Connect(function()
        toggled = not toggled
        getgenv().coinFarm = toggled

        if toggled then
            Button.Text = "AutoFarm: ON"
            Button.BackgroundColor3 = Color3.fromRGB(40, 100, 40)
            task.spawn(coinFarm)
        else
            Button.Text = "AutoFarm: OFF"
            Button.BackgroundColor3 = Color3.fromRGB(100, 40, 40)
        end
    end)
end
